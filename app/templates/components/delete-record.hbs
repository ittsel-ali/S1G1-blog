{{#bs-modal open=modal3 onSubmit=(action "submit") onHidden=(action (mut modal3) false) as |modal|}}
  {{#modal.header}}
    <h4 class="modal-title text-center">
      Warning!!
    </h4>
  {{/modal.header}}
  
  {{#modal.body}}
    Do you want to delete this record?
  {{/modal.body}}
  
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close)}}Cancel{{/bs-button}}
    {{#bs-button type="btn btn-danger" onClick=(action modal.submit)}}Delete <span class="glyphicon glyphicon-ok"/>{{/bs-button}}
  {{/modal.footer}}

{{/bs-modal}}
  <button class="badge badge-danger badge-circle pull-right" onClick={{action (mut modal3) true}}><span class="glyphicon glyphicon-remove"/></button>
